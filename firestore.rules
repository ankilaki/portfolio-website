rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Anyone can read projects and resumes
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /resumes/{resumeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
